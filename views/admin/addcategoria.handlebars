{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da Categoria" >
            <label for="slug">Slug:</label>
                <input type="text"  class="form-control" name="slug" id="slug" placeholder="Slug da Categoria" >
            <button type="submit" class="btn btn-outline-success mt-2">Criar Categoria</button>
        </form>
    </div>
</div>