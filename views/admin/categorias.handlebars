<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"<button type="button" class="btn btn-outline-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="mt-4 btn btn-success">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="mt-2 btn btn-danger">Deletar categoria</button>
            </form>
            
        </div>
    </div>
{{else}}
<hr>
    <h4 class="mt-3">Nenhuma Categoria registrada!</h4>
{{/each}}