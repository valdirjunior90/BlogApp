<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"<button type="button" class="btn btn-outline-success">Nova Postagem</button></a>


{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button type="button" class="mt-4 btn btn-success">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="mt-2 btn btn-danger">Deletar postagem</button>
            </form>
            
        </div>
    </div>
{{else}}
<hr>
    <h4 class="mt-3">Nenhuma Categoria registrada!</h4>
{{/each}}